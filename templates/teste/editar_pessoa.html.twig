{% extends 'base.html.twig' %}

{% block title %}Teste Magazord{% endblock %}

{% block body %}

    <form method="POST" action="{{ pessoa.id }}" autocomplete="off" style="margin-top: 10px">
        <input type="hidden" name="_method" value="PATCH">
        <div class="container" style='border: solid 2px #ccc'>
            <div class="mb-3">
                <label for="nome" class="form-label">Digite o nome</label>
                <input class="form-control" type="text" id="nome" name="nome" placeholder="nome" value="{{ pessoa.name }}" required>
                <label for="cpf" class="form-label">Digite o CPF</label>
                <input class="form-control" type="number" id="cpf" name="cpf" placeholder="CPF" value="{{ pessoa.cpf }}" required>
            </div>
            <div>
                <button type="submit" style="background-color: darkgreen; color: #FFF">Salvar</button>
                <button type="button"><a href="/teste/?p=pessoas" style="text-decoration: none; color: black">Cancelar</a></button>
            </div>
        </div>
    </form>
    <script src="https://kit.fontawesome.com/f1e18a8a64.js" crossorigin="anonymous"></script>
{% endblock %}