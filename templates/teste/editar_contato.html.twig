{% extends 'base.html.twig' %}

{% block title %}Teste Magazord{% endblock %}

{% block body %}

    <form method="POST" action="{{ contato.id }}" autocomplete="off" style="margin-top: 10px">
        <input type="hidden" name="_method" value="PATCH">
        <div class="container" style='border: solid 2px #ccc'>
            <div class="mb-3">
                <label for="contato" class="form-label">Digite o contato</label>
                <input class="form-control" type="text" id="contato" name="contato"  value="{{ contato.contact }}" placeholder="Digite aqui o contato">
            </div>
            <div>
                <button type="submit" id="env_form_contatos" style="background-color: darkgreen; color: #FFF">Salvar</button>
                <button type="button"><a href="/teste/?p=contatos" style="text-decoration: none; color: black">Cancelar</a></button>
            </div>
        </div>
    </form>
    <script src="https://kit.fontawesome.com/f1e18a8a64.js" crossorigin="anonymous"></script>
{% endblock %}